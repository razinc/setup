" colo desert
" set hlsearch

" alias
ca fp echo expand('%:p')

" auto complete
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap {;<CR> {<CR>};<ESC>O
inoremap {<CR> {<CR>}<ESC>O

nmap <silent> ./ :nohlsearch<CR>

set autoindent
set expandtab
set formatoptions-=tc
set nocompatible
set nocp
set number
set ruler
set showmatch
set tabpagemax=100
set tabstop=4
syn on

